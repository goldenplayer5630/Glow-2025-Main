<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Flower.App"
        xmlns:viewmodels="using:Flower.App.ViewModels"
        xmlns:vm="clr-namespace:Flower.App" 
        x:Class="Flower.App.AssignBusWindow"
        x:DataType="viewmodels:AssignBusViewModel"
        Title="Assign Bus"
        Width="520" Height="240"
        CanResize="False"
        WindowStartupLocation="CenterOwner">
  <Grid RowDefinitions="*,Auto" Margin="8">
    <!-- Form -->
    <Border Grid.Row="0" Padding="8" Classes="card">
      <local:AssignBus/>
    </Border>

    <!-- Buttons -->
    <Grid Grid.Row="1" ColumnDefinitions="*,Auto,Auto,Auto" Margin="0,12,0,0">

      <!-- Spacer in Column 1 (auto) -->

      <!-- OK (right-most) -->
      <Button Grid.Column="3"
              Content="Confirm"
              MinWidth="120"
              Margin="8,0,0,0"
              IsDefault="True"
              IsEnabled="{Binding CanConfirm}"
              Click="OnConfirmClicked" />
    </Grid>
  </Grid>
</Window>
